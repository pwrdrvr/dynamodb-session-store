{
  "compilerOptions": {
    "rootDirs": ["src", "examples"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "importHelpers": true,
    "composite": true,
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    // Allow referencing @pwrdrvr/connect-dynamodb-v3 in examples
    "baseUrl": ".",
    "paths": {
      "@pwrdrvr/connect-dynamodb-v3": ["src"]
    }
  },
  "exclude": ["node_modules/*", "dist"]
}
